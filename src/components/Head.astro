---
import { SITE } from '@/consts'
import { generateWebsiteSchema } from '@/lib/structured-data'
import Favicons from './Favicons.astro'
import { ClientRouter } from 'astro:transitions'

const websiteSchema = generateWebsiteSchema()
const siteBase = Astro.site ?? SITE.href
const rssJaHref = new URL('rss.xml', siteBase).toString()
const rssEnHref = new URL('en/rss.xml', siteBase).toString()
---

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes"
  />
  <meta name="generator" content={Astro.generator} />

  <meta name="HandheldFriendly" content="True" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta
    name="format-detection"
    content="telephone=no,date=no,address=no,email=no,url=no"
  />

  <meta
    name="theme-color"
    content="#121212"
    media="(prefers-color-scheme: dark)"
  />
  <meta
    name="theme-color"
    content="#121212"
    media="(prefers-color-scheme: light)"
  />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="manifest" href="/site.webmanifest" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title="Audio Review Blog (日本語)"
    href={rssJaHref}
  />
  <link
    rel="alternate"
    type="application/rss+xml"
    title="Audio Review Blog (English)"
    href={rssEnHref}
  />

  <Favicons />
  <ClientRouter />

  {import.meta.env.PROD && (
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1JP1QE2GWE" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag(){ window.dataLayer.push(arguments) }
      gtag('js', new Date())
      gtag('config', 'G-1JP1QE2GWE')
    </script>
  )}

  <!-- サイト全体の構造化データ -->
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} is:inline />

  <slot />
</head>
