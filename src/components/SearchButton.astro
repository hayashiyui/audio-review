---
interface Props {
  class?: string
}

const { class: className }: Props = Astro.props as any
---
<button
  type="button"
  class={`inline-flex items-center justify-center rounded-md p-2 text-foreground/70 hover:bg-foreground/5 hover:text-foreground/90 dark:hover:bg-foreground/10 ${
    className ?? ''
  }`}
  aria-label="検索"
  title="検索 (Ctrl/⌘+K)"
  onclick="window.dispatchEvent(new CustomEvent('open-search'))"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <circle cx="11" cy="11" r="7"></circle>
    <path d="m21 21-4.3-4.3"></path>
  </svg>
</button>

